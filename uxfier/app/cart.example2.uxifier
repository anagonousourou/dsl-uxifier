WebApplication {

    name  'CartExemple2_Application'

    WebPage {
        name 'pagename1'
        title 'page Title'

        Header {

            HorizontalLayout{
                SocialMediaGroup {
                    SocialMedia {
                        type Facebook
                        url 'http://127.0.0.1/'
                    }
                }
            }
        }
        Cart{
            title 'Mon Panier discret'

            Products{
                Product{
                    deletable yes
                    Quantity{
                        editable no
                    }
                }
            }
            Remark {
                label 'Ajouter une remarque'
            }
            Summary{
                label 'Resume de votre commande'

                subTotal {
                    label 'Sous-total'
                }

                Delivery{
                    label 'Frais de livraison'
                    defaultValue 0
                }

                total {
                    label 'Total'
                }
            }

        }

    }
    NavigationMenu{
        ApplicationName 'Adeline'
        type Navbar
        Menu{
            label 'Products'
            link '/'
        }
        Menu{
            label 'Customers'
            link '/'
        }
        Menu{
            label 'Orders'
            link '/'
        }
        Menu{
            label 'Login'
            link '/'
        }
        Menu{
            label 'My account'
        }
        CartAction{
            displayItemCount
            label 'Mon Panier'
            useIcon
        }
    }

}